<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CSETheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cse</item>
        <item name="colorPrimaryDark">@color/cseDark</item>
        <item name="colorAccent">@color/cseDark</item>
    </style>

    <style name="CETheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ce</item>
        <item name="colorPrimaryDark">@color/ceDark</item>
        <item name="colorAccent">@color/ceDark</item>
    </style>

    <style name="AETheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ae</item>
        <item name="colorPrimaryDark">@color/aeDark</item>
        <item name="colorAccent">@color/aeDark</item>
    </style>

    <style name="ECTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ec</item>
        <item name="colorPrimaryDark">@color/ecDark</item>
        <item name="colorAccent">@color/cseDark</item>
    </style>

    <style name="METheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/me</item>
        <item name="colorPrimaryDark">@color/meDark</item>
        <item name="colorAccent">@color/meDark</item>
    </style>

    <style name="AUTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/au</item>
        <item name="colorPrimaryDark">@color/auDark</item>
        <item name="colorAccent">@color/auDark</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- ######################################################## -->
    <!-- #                        Image                         # -->
    <!-- ######################################################## -->

    <style name="Material_Card_Head_Image">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>

        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Material_Card_Title_Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">#000000</item>

        <item name="android:textSize">20sp</item>
    </style>

    <style name="Material_Card_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?colorAccent</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:background">#5fa3d0</item>
    </style>

</resources>
