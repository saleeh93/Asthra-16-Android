<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.saleeh.astra.api.models.Participant" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        app:cardBackgroundColor="@{item.getColor()}"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/roll_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:fontFamily="sans-serif-light"
                android:text="@{item.position}"
                android:textColor="@{item.getTextColor()}"
                android:textSize="25sp"
                tools:text="1" />


            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-light"
                android:text="@{item.point}"
                android:textColor="@{item.getTextColor()}"
                android:textSize="25dp"
                tools:text="S8" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/roll_no"
                android:layout_toRightOf="@+id/roll_no"
                android:fontFamily="sans-serif-light"
                android:text="@{item.name}"

                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@{item.getTextColor()}"
                android:textSize="25dp"
                tools:text="Saleeh" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</layout>